{
    "replacerules.rules": {
        "Code-ws-definition": {
            "find": "(^)(\\S*?)(\\s+?)(.*$)",
            "replace": "- `$2` - $4",
            "languages": [
                "markdown"
            ],
            "flags": "m"
        },
        "Highlight flags -": {
            "find": "(-{1,2})(.+?)(,| {2,}|\\t)",
            "replace": "`$1$2`$3",
            "languages": [
                "markdown"
            ]
        },
        "Replace tabs and large spaces with -": {
            "find": "(\\t| {3,})",
            "replace": " - "
        },
        "Create List": {
            "find": "(^\\s*)(`.*)",
            "replace": "$1- $2"
        },
        "Remove Extra Lines": {
            "find": "(\\n.)",
            "replace": "\n",
            "flags": "m"
        },
        "Mark flags as code": {
            // "find": "(-{1,2}[\\w\\S]+)(( \\<.{3,30}\\>)|)",
            "find": "(-{1,2})(.+?)(,| {2,}|\\t)",
            "replace": "`$1$3`",
            "languages": [
                "markdown"
            ]
        },
        "Fix Copy as Markdown Escapes": {
            "find": "\\\\([><*\\]\\[\\-\\\\_#])",
            "replace": "$1",
            "languages": [
                "markdown"
            ]
        },
        "Word- new line- definition fix Bold wrap": {
            "find": "(^[\\b\\w., ]+?)([\\n]|[\\t\\n]*)(^.+?$)",
            "replace": "- **$1** - $3",
            "languages": [
                "markdown"
            ]
        },
        "Make nice 'quoted' unordered lists": {
            "flags": "gm",
            "find": "(^(\\s*)> -)\\s*(.*$)(\\n>*[\\s]*)*\\n",
            "replace": "$2>- $3\n",
            "languages": [
                "markdown"
            ]
        },
        "Replace funny quotes - curly - with straight. or backticks": {
            "find": "[’‘“‘”](?=[^tslr])",
            "replace": "`",
            "languages": [
                "markdown"
            ]
        }
    },
    "replacerules.rulesets": {
        "Function Params to list": {
            "rules": [
                "Highlight flags -",
                "Replace tabs and large spaces with -",
                "Create List",
                "Remove Extra Lines"
            ]
        }
    }
}