{
    "workbench.colorTheme": "eppz!",
    "files.associations": {
        "*.rmd": "markdown",
        "*.tag": "html",
        "*.cshtml": "html",
        "*.html": "html",
        "*.njk": "html",
        "*.mustache": "html",
        "*.html.md": "html"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/.vscode": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/node_modules": true,
        "node_modules": true,
        "venv": true,
        "*.sublime-*": true,
        "env*": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/env": true,
        "**/venv": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/env/**": true,
        "**/venv/**": true,
        "env-*": true,
        ".history/*": true
    },
    "editor.formatOnSave": true,
    "editor.minimap.renderCharacters": false,
    "files.autoSave": "onFocusChange",
    "editor.suggestSelection": "first",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "window.zoomLevel": -2,
    "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
    "breadcrumbs.enabled": true,
    "editor.highlightActiveIndentGuide": true,
    "editor.wrappingIndent": "indent",
    "workbench.tree.renderIndentGuides": "always",
    //Language Specific Settings
    //Extension Specific Settings
    //[Visual Studio Intellicode]
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    //[Rainbow Indent]
    "indentRainbow.errorColor": "rgba(128,32,32,0.2)",
    "indentRainbow.colors": [
        "rgba(255,255,64,0.07)",
        "rgba(127,255,127,0.07)",
        "rgba(255,127,255,0.07)",
        "rgba(79,236,236,0.07)"
    ],
    "indentRainbow.tabmixColor": "rgba(128,32,96,0.6)",
    "indentRainbow.ignoreErrorLanguages": [
        "markdown"
    ],
    "debug.console.fontFamily": "'BlexMono Nerd Font Mono Light Italic', 'NotoSansMono Nerd Font Condensed', 'FiraCode Nerd Font Retina', 'Fira Code Retina', monospace",
    "editor.fontFamily": "'BlexMono Nerd Font Mono Light Italic', 'NotoSansMono Nerd Font Condensed', 'FiraCode Nerd Font Retina', 'Fira Code Retina', monospace",
    "terminal.integrated.fontFamily": "'BlexMono Nerd Font Mono Light Italic', 'NotoSansMono Nerd Font Condensed', 'FiraCode Nerd Font Retina', 'Fira Code Retina', monospace",
    "terminal.integrated.copyOnSelection": true,
    // Controls the font family.
    //"editor.fontFamily": "Operator Mono",
    // Controls the line height. Use 0 to compute the lineHeight from the fontSize.
    "editor.lineHeight": 24,
    // Enables font ligatures
    "editor.fontLigatures": true,
    // Controls if file decorations should use badges.
    "explorer.decorations.badges": false,
    "editor.autoIndent": true,
    "editor.codeLens": false,
    "editor.cursorBlinking": "expand",
    // "editor.cursorBlinking": "phase",
    "editor.cursorStyle": "block",
    "editor.fontSize": 24,
    "editor.formatOnPaste": true,
    "editor.formatOnType": false,
    //    "editor.letterSpacing": 0.5,
    "search.showLineNumbers": true,
    "workbench.iconTheme": "material-icon-theme",
    "zenMode.centerLayout": false,
    //example token customization
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            //     {
            //         "name": "No italics",
            //         "scope": [
            //             "comment",
            //             "markup.quote",
            //             "variable.language",
            //             "variable.parameter"
            //         ],
            //         "settings": {
            //             "fontStyle": "normal"
            //         }
            //     },
            //     {
            //         "name": "Tag brackets",
            //         "scope": [
            //             "punctuation.definition.tag"
            //         ],
            //         "settings": {
            //             "foreground": "#BBBBBB"
            //         }
            //     }
        ]
    },
    "workbench.colorCustomizations": {
        // "statusBar.background": "#333",
        // "statusBar.foreground": "#fff",
        // "statusBar.noFolderBackground": "#333",
        // "statusBar.noFolderForeground": "#fff"
    },
    "terminal.integrated.fontSize": 24
}
